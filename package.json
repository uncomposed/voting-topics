{
  "name": "voting-topics",
  "version": "1.0.0",
  "description": "A lightweight, open-source project for building and sharing transferable sample ballots",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext js,jsx,ts,tsx",
    "test": "vitest",
    "test:a11y:unit": "vitest run tests/a11y/app.a11y.test.tsx",
    "test:e2e": "playwright test",
    "test:a11y": "npm run test:a11y:unit && npm run test:e2e",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "check-duplicates": "node scripts/check-duplicates.js",
    "check-duplicates:warn": "node scripts/check-duplicates.js --warn-only",
    "check-duplicates:strict": "node scripts/check-duplicates.js",
    "check-duplicates:skip-high": "node scripts/check-duplicates.js --skip-high --warn-only",
    "suggest-refactors": "node scripts/check-duplicates.js --suggest",
    "show-resources": "node scripts/check-duplicates.js --resources",
    "setup-hooks": "node scripts/setup-pre-commit.js",
    "prepare": "npm run setup-hooks",
    "library:build": "node scripts/build-library-index.mjs",
    "library:expand": "node scripts/expand-library-index.mjs"
  },
  "dependencies": {
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.23.8",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.9.1",
    "@playwright/test": "^1.47.0",
    "jest-axe": "^9.0.0",
    "@storybook/addon-docs": "^9.1.4",
    "@storybook/addon-onboarding": "^9.1.4",
    "@storybook/react-vite": "^9.1.4",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "eslint-plugin-storybook": "^9.1.4",
    "husky": "^9.1.7",
    "jsdom": "^24.0.0",
    "storybook": "^9.1.4",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vitest": "^1.4.0"
  },
  "keywords": [
    "voting",
    "ballot",
    "elections",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "MIT"
}
